@model _19T1021112.Web.Models.ShipperSearchOutput
@{
    Layout = null;
}

<p style="margin-top:10px;">
    Có <strong>@Model.RowCount</strong> người giao hàng trong tổng số <strong>@Model.PageCount</strong> trang.
</p>

<div class="table-responsive">
    <table class="table table-bordered table-striped table-hover">
        <thead>
            <tr>
                <th>Tên người giao hàng</th>
                <th>Số điện thoại</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Data)
            {
                <tr>
                    <td>@item.ShipperName</td>
                    <td>@item.Phone</td>
                    <td>
                        <a href="~/Shipper/Edit/@item.ShipperID" class="btn btn-xs btn-primary">
                            <i class="fa fa-edit"></i>
                        </a>
                        <a href="~/Shipper/Delete/@item.ShipperID" class="btn btn-xs btn-danger">
                            <i class="fa fa-trash"></i>
                        </a>
                    </td>
                </tr>
            }

        </tbody>
    </table>

    <div class="text-center">
        <ul class="pagination">
            @for (int i = 0; i <= @Model.PageCount; i++)
            {
                if (i == Model.Page)
                {
                    <li class="active"><a href="#">@i</a></li>
                }
                else
                {
                    <li><a href="~/Shipper?page=@i&searchValue=@Model.SearchValue">@i</a></li>
                }
            }
        </ul>
    </div>
</div>



