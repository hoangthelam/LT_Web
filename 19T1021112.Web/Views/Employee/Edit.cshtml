@model _19T1021112.DomainModels.Employee
@{

}
<div class="box box-primary">
    <div class="box-body">
        <form class="form-horizontal" action="~/Employee/Save" method="post">

            @Html.AntiForgeryToken()  @*tránh bị fake dữ liệu*@

            <input type="hidden" name="EmployeeID" value="@Model.EmployeeID">

            <div class="form-group">
                <label class="control-label col-sm-2">Ảnh:</label>
                <div class="col-sm-10">
                    <input type="file" value="@Model.Photo" name="Photo">
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Họ đệm:</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" autofocus value="@Model.FirstName" name="FirstName">
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Tên nhân viên:</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" value="@Model.LastName" name="LastName">
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Ngày sinh:</label>
                <input type="date" class="form-control" value="@Model.BirthDate" name="BirthDate"/>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Ghi Chú:</label>
                <input type="text" class="form-control" value="@Model.Notes" name="Notes" />
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Email:</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" value="@Model.Email" name="Email">
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-default">Lưu</button>
                    <a href="~/Employee//" class="btn btn-warning">
                        Quay lại
                    </a>
                </div>
            </div>
        </form>
    </div>
</div>


